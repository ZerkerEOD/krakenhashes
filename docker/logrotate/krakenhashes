/var/log/krakenhashes/backend/*.log {
    size 100M
    missingok
    rotate 20
    compress
    delaycompress
    notifempty
    create 0640 root root
    sharedscripts
    postrotate
        supervisorctl signal HUP krakenhashes-backend || true
    endscript
}

/var/log/krakenhashes/nginx/*.log {
    size 100M
    missingok
    rotate 20
    compress
    delaycompress
    notifempty
    create 0640 www-data www-data
    sharedscripts
    postrotate
        supervisorctl signal HUP nginx || true
    endscript
}
