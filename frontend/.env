# API Configuration
# HTTPS API endpoint for secure communications
REACT_APP_API_URL=https://localhost:31337
# HTTP API endpoint for non-secure communications
REACT_APP_HTTP_API_URL=http://localhost:1337
# WebSocket endpoint for real-time communications
REACT_APP_WS_URL=wss://localhost:31337

# Development Server SSL Configuration
# Enable HTTPS for development server
HTTPS=true
# Path to SSL certificate file
SSL_CRT_FILE=../../hashdom-config/certs/server.crt
# Path to SSL key file
SSL_KEY_FILE=../../hashdom-config/certs/server.key

# Development Server Configuration
PORT=3000
NODE_ENV=development 