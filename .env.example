# Server Configuration
PORT=8080
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hashdom
DB_USER=hashdom
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# TLS Configuration
HASHDOM_CERTS_DIR=/path/to/your/certs      # Directory containing TLS certificates
HASHDOM_CERT_FILE=/path/to/your/server.crt # Server certificate file (full path)
