# Debug Settings
# DEBUG: Set to 'true' or '1' to enable debug output
DEBUG=true

# LOG_LEVEL: Controls which messages are displayed
# Options (from most to least verbose):
#   - DEBUG   : Shows all messages (DEBUG, INFO, WARNING, ERROR)
#   - INFO    : Shows INFO, WARNING, and ERROR
#   - WARNING : Shows WARNING and ERROR
#   - ERROR   : Shows only ERROR messages
# Default: INFO if not specified
LOG_LEVEL=DEBUG

# Database Configuration
# You can use either the connection string or individual parameters
# If both are provided, DB_CONNECTION_STRING takes precedence
DB_CONNECTION_STRING=postgres://hashdom:hashdomd@localhost:5432/hashdom?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hashdom
DB_USER=hashdom
DB_PASSWORD=hashdom
DB_NAME=hashdom

# JWT Configuration
JWT_SECRET=This-is-a-secret-key-for-hashdom
JWT_EXPIRATION=24h

# Server Configuration
# Server Configuration
HASHDOM_HOST=localhost
HASHDOM_HTTP_PORT=1337
HASHDOM_HTTPS_PORT=31337

# Usage for proper CORS configuration
# CORS_ALLOWED_ORIGIN=http://localhost:3000
CORS_ALLOWED_ORIGIN=https://localhost:3000

# Directories
HASHDOM_CONFIG_DIR=../hashdom-config              # Base configuration directory (defaults to ~/.hashdom)

# Example for 5-second heartbeat cycle
HASHDOM_WRITE_WAIT=4s     # Time allowed to write messages
HASHDOM_PONG_WAIT=10s     # Time to wait for pong response
HASHDOM_PING_PERIOD=6s    # How often to send pings

# CA Details (used when generating certificates)
CA_COUNTRY=US
CA_ORGANIZATION=HashDom
CA_ORGANIZATIONAL_UNIT=HashDom CA
CA_COMMON_NAME=HashDom Root CA

# TLS Configuration
HASHDOM_TLS_MODE=self-signed                # Options: self-signed, provided, certbot

# Self-signed Configuration
HASHDOM_CERTS_DIR=../hashdom-config/certs                         # Directory for certificates (defaults to $HASHDOM_CONFIG_DIR/certs)
HASHDOM_CA_COUNTRY=US                      # CA certificate country
HASHDOM_CA_ORGANIZATION=HashDom            # CA certificate organization
HASHDOM_CA_ORGANIZATIONAL_UNIT=HashDom CA  # CA certificate organizational unit
HASHDOM_CA_COMMON_NAME=HashDom Root CA     # CA certificate common name
HASHDOM_CERT_KEY_SIZE=4096                 # RSA key size for certificates (2048 or 4096)
HASHDOM_CERT_VALIDITY_DAYS=365             # Server certificate validity in days
HASHDOM_CA_VALIDITY_DAYS=3650              # CA certificate validity in days (10 years)

# Additional Certificate Names (comma-separated)
HASHDOM_ADDITIONAL_DNS_NAMES=localhost,hashdom.local
HASHDOM_ADDITIONAL_IP_ADDRESSES=127.0.0.1,::1

# User-provided Certificate Configuration
# HASHDOM_CERT_FILE=/path/to/cert.pem      # Server certificate file
# HASHDOM_KEY_FILE=/path/to/key.pem        # Server private key file
# HASHDOM_CA_FILE=/path/to/ca.pem          # CA certificate file (optional)

# Certbot Configuration
# HASHDOM_CERTBOT_DOMAIN=example.com       # Domain for certbot certificate
# HASHDOM_CERTBOT_EMAIL=admin@example.com  # Email for certbot notifications
# HASHDOM_CERTBOT_STAGING=false            # Use staging server for testing
# HASHDOM_CERTBOT_AUTO_RENEW=true         # Enable automatic renewal
# HASHDOM_CERTBOT_RENEW_HOOK=             # Command to run after renewal
# HASHDOM_CERTBOT_RENEW_HOOK=             # Command to run after renewal